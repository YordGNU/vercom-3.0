@model vercom.Models.Users
@{if (Model.UserRoles.Count == 0)
    {
        <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%" id="userRoleTable">
            <thead>
                <tr>
                    <th>NOMBRE</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="color: red">
                        NO HAY ROLES ASOCIADOS AL USUARIO...
                    </td>
                    <td style="color: red"></td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%" id="userRoleTable">
            <thead>
                <tr>
                    <th>NOMBRE</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.UserRoles.Where(r=>r.RoleID != null).ToList())
                {
                    <tr id="row_@role.RoleID">
                        <td>
                            @Html.ActionLink(role.Roles.RoleName, "RoleDetails", new { id = role.RoleID })
                        </td>
                        <td class="text-right">
                            <div class="btn-group">
                                <a class="btn-outline-success btn btn-xs" href="@Url.Action("RoleEdit", "Admin", new { id = role.RoleID })"><i class="fa fa-edit"></i></a>
                                <button data-id=@role.RoleID data-rolid=@role.RoleID class="deleteButton btn-outline-danger btn btn-xs"><i class="fa fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
}

