@model vercom.Models.Roles
@{
    if (Model.RolePermissions.Count == 0)
    {
        <label>PERMISOS ASOCIADOS AL ROL</label>
        <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%" id="permisosTable">
            <thead>
                <tr>
                    <th>PERMISO</th>
                    <th>DESCRIPCION</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="color: red">
                        NO HAY PERMISOS ASOCIADOS AL ROL...
                    </td>
                    <td style="color: red"></td>
                    <td style="color: red"></td>
                </tr>
            </tbody>
        </table>

    }
    else
    {
        <label>PERMISOS ASOCIADOS AL ROL</label>
        <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%" id="permisosTable">
            <thead>
                <tr>
                    <th>PERMISO</th>
                    <th>DESCRIPCION</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var permission in Model.RolePermissions.OrderBy(n => n.Permissions.PermissionName))
                {
                    <tr id="row_@permission.PermissionID">
                        <td>
                            @Html.ActionLink(permission.Permissions.PermissionName, "PermissionDetails", new { id = permission.PermissionID })
                        </td>
                        <td class="text-right">
                            @permission.Permissions.PermissionDescription
                        </td>
                        <td class="text-right">
                            <div class="btn-group">
                                <a class="btn-outline-success btn btn-xs" href="@Url.Action("PermissionEdit", "Admin", new {id = permission.PermissionID})"><i class="fa fa-edit"></i></a>
                                <button data-id=@permission.PermissionID data-rolid=@Model.RoleID class="deleteButton btn-outline-danger btn btn-xs"><i class="fa fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }

}
