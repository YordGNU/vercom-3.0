@model vercom.Models.Permissions
@{if (Model.RolePermissions.Count == 0)
    {
        <label>ROLES ASOCIADOS AL PERMISO</label>
        <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%" id="dataTables-example">
            <thead>
                <tr>
                    <th>NOMBRE</th>
                    <th>DESCRIPCION</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="color: red">
                        NO HAY ROLES ASOCIADOS AL PERMISO...
                    </td>
                    <td style="color: red"></td>
                    <td style="color: red"></td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <label>ROLES ASOCIADOS AL PERMISO</label>
        <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%" id="dataTables-example">
            <thead>
                <tr>
                    <th>NOMBRE</th>
                    <th>DESCRIPCION</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.RolePermissions)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(role.Roles.RoleName, "RoleDetails", new { id = role.Roles.RoleID })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => role.Roles.RoleDescription)
                        </td>
                        <td class="text-right">
                            <div class="btn-group">
                                <a class="btn-outline-success btn btn-xs" href="@Url.Action("RoleEdit", "Admin", new { id = role.Roles.RoleID })"><i class="fa fa-edit"></i></a>
                                <button type="submit" id="@role.Roles.RoleID" class="btn-outline-danger btn btn-xs"><i class="fa fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
}

