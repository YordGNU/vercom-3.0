<div class="page-title-head d-flex align-items-center">
    <div class="flex-grow-1">
        <h4 class="fs-sm text-uppercase fw-bold m-0">CLIENTES</h4>
    </div>
    <div class="text-end">
        <ol class="breadcrumb m-0 py-0">
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">VERCOM</a>
            </li>
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">VENTA MAYORISTA</a>
            </li>
            <li class="breadcrumb-item active">CLIENTES</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div data-table="" data-table-rows-per-page="50" class="card" id="bloque-Tclientes">
            <div class="card-header border-light justify-content-between">
                <div class="d-flex gap-2">
                    <div class="app-search">
                        <input data-table-search="" type="search" class="form-control" placeholder="Buscar por nombre...">
                        <i data-lucide="search" class="app-search-icon text-muted"></i>
                    </div>
                    <button data-table-delete-selected="" data-table-delete-url="@Url.Action("EliminarMultiplesClientes","Mayorista")" type="button" class="btn btn-danger btn-icon d-none">
