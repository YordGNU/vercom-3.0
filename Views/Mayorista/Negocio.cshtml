                    <thead class="bg-light align-middle bg-opacity-25 thead-sm">
                        <tr class="text-uppercase fs-xxs">
                            <th class="ps-3 noExport" style="width: 1%;" data-exclude="true">
                                <input data-table-select-all="" class="form-check-input form-check-input-light fs-14 mt-0" type="checkbox" id="select-all" value="option">
                            </th>
                            <th data-table-sort="" data-column="fecha">FECHA</th>
                            <th data-table-sort="" data-column="cliente">CLIENTE</th>
                            <th data-table-sort="" data-column="productoservi">PRODUCTO/SERVICIO</th>
                            <th data-table-sort="" data-column="cantidad">CANTIDAD</th>
                            <th data-table-sort="" data-column="importe">IMPORTE</th>
                            <th data-table-sort="" data-column="foperacion">F.OPERACION</th>
                            <th data-table-sort="" data-column="nofactura">NO. FACTURA</th>
                            <th class="text-center noExport" style="width: 1%;">ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="card-footer border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <div data-table-pagination-info="entradas"></div>
                    <div data-table-pagination=""></div>
                </div>
            </div>
        </div>
    </div><!-- end col -->
</div><!-- end row -->
