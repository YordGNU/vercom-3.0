@model IEnumerable<vercom.Interfaces.iFlujoResumen>
@{
    var i = 0;
    double? saldoTotal = 0;
    double? entradaTotal = 0;
    double? salidaTotal = 0;
}
@if (Model.Where(s => s.tipo == "RESUMEN").FirstOrDefault() != null)
{
    <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%">
        <thead>
            <tr>
                <th>AREA</th>
                <th>ENTRADA</th>
                <th>SALIDA</th>
                <th>SALDO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                saldoTotal += item.saldo;
                var saldo = String.Format("{0:#,##0.00}", item.saldo);
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.area)
                    </td>

                    <td class="text-navy">
                        <ul>
                            @if (item.entrada != null)
                            {
                                var formatEnt = String.Format("{0:#,##0.00}", item.entrada);
                                <li class="fa fa-level-up"> <strong>@formatEnt</strong></li>

                                entradaTotal += item.entrada;
                            }
                        </ul>
                    </td>
                    <td class="text-warning">
                        <ul>
                            @if (item.salida != null)
                            {
                                var formatSal = String.Format("{0:#,##0.00}", item.salida);
                                <li class="fa fa-level-down"><strong> @formatSal</strong></li>

                                salidaTotal += item.salida;
                            }
                        </ul>

                    </td>
                    <td class="cm-strong">
                        <strong>@saldo</strong>
                    </td>
                </tr>
            }
            @{
                var CVentradaTotal = String.Format("{0:#,##0.00}", entradaTotal);
                var CVsalidaTotal = String.Format("{0:#,##0.00}", salidaTotal);
                var CVsaldoTotal = String.Format("{0:#,##0.00}", saldoTotal);
            }
            <tr>
                <td></td>
                <td>TOTAL ENTRADA:<strong> @CVentradaTotal</strong></td>
                <td>TOTAL SALIDA:<strong> @CVsalidaTotal</strong></td>
                <td>SALDO DISPONIBLE:<strong> @CVsaldoTotal</strong></td>
            </tr>
        </tbody>
    </table>
}
else
{
    <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%">
        <thead>
            <tr>
                <th>AREA</th>
                <th>ENTRADA</th>
                <th>CONCEPTO</th>
                <th>SALIDA</th>
                <th>CONCEPTO</th>
                <th>SALDO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                saldoTotal += item.saldo;
                var saldo = String.Format("{0:#,##0.00}", item.saldo);
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.area)
                    </td>

                    <td class="text-navy">
                        <ul>
                            @if (item.entrada != null)
                            {
                                foreach (var ent in item.listentrada)
                                {
                                    var formatEnt = String.Format("{0:#,##0.00}", ent);
                                    <li><strong>@formatEnt</strong></li>
                                }
                                entradaTotal += item.entrada;
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var CONCent in item.conceptoEntrada)
                            {
                                <li> @CONCent</li>
                            }
                        </ul>
                    </td>
                    <td class="text-warning">
                        <ul>
                            @if (item.salida != null)
                            {
                                foreach (var sal in item.listsalida)
                                {
                                    var formatSal = String.Format("{0:#,##0.00}", sal);
                                    <li><strong>@formatSal</strong></li>
                                }
                                salidaTotal += item.salida;
                            }
                        </ul>

                    </td>
                    <td>
                        <ul>

                            @foreach (var CONCsal in item.conceptoSalida)
                            {
                                <li> @CONCsal</li>
                            }
                        </ul>
                    </td>
                    <td class="cm-strong">
                        <strong>@saldo</strong>
                    </td>
                </tr>
            }
            @{
                var CVentradaTotal = String.Format("{0:#,##0.00}", entradaTotal);
                var CVsalidaTotal = String.Format("{0:#,##0.00}", salidaTotal);
                var CVsaldoTotal = String.Format("{0:#,##0.00}", saldoTotal);
            }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>TOTAL ENTRADA:<strong> @CVentradaTotal</strong></td>
            <td>TOTAL SALIDA:<strong> @CVsalidaTotal</strong></td>
            <td>SALDO DISPONIBLE:<strong> @CVsaldoTotal</strong></td>
        </tr>
        </tbody>
    </table>
}
