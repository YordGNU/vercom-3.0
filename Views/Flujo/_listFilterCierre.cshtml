@model IEnumerable<vercom.Interfaces.iFlujoResumen>
@{
    var i = 0;
    double? saldoTotal = 0;
    double? entradaTotal = 0;
    double? salidaTotal = 0;
}
<div class="table-responsive">
    <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%">
        <thead>
            <tr>
                <th>AREA</th>
                <th>ENTRADA</th>
                <th>CONCEPTO.</th>
                <th>SALIDA</th>
                <th>CONCEPTO</th>
                <th>SALDO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                saldoTotal += item.saldo;
                var saldo = String.Format("{0:#,##0.00}", item.saldo);
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.area)
                    </td>

                    <td class="text-navy" style="width: 7%;">
                        <ul>
                            @if (item.listentrada != null)
                            {
                                foreach (var ient in item.listentrada)
                                {
                                    var CVentrada = String.Format("{0:#,##0.00}", ient);
                                    <li><strong>@CVentrada</strong></li>

                                    entradaTotal += ient;
                                }

                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @if (item.conceptoEntrada != null)
                            {
                                foreach (var iCent in item.conceptoEntrada)
                                {

                                    <li>@iCent</li>
                                }

                            }
                        </ul>
                    </td>

                    <td class="text-warning">
                        <ul style="font-display:inherit">
                            @if (item.listsalida != null)
                            {
                                foreach (var isal in item.listsalida)
                                {
                                    var CVSalida = String.Format("{0:#,##0.00}", isal);
                                    <li><strong>@CVSalida</strong></li>
                                    salidaTotal += isal;
                                }
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @if (item.conceptoSalida != null)
                            {
                                foreach (var iCent in item.conceptoSalida)
                                {

                                    <li>@iCent</li>
                                }

                            }
                        </ul>
                    </td>
                    <td class="cm-strong">
                        <strong>@saldo</strong>
                    </td>
                </tr>
            }
            @{
                var CVentradaTotal = String.Format("{0:#,##0.00}", entradaTotal);
                var CVsalidaTotal = String.Format("{0:#,##0.00}", salidaTotal);
                var CVsaldoTotal = String.Format("{0:#,##0.00}", saldoTotal);
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>TOTAL ENTRADA:<strong> @CVentradaTotal</strong></td>
                <td>TOTAL SALIDA:<strong> @CVsalidaTotal</strong></td>
                <td>SALDO DISPONIBLE:<strong> @CVsaldoTotal</strong></td>
            </tr>
        </tbody>
    </table>
</div>

