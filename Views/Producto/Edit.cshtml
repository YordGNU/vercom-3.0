@model vercom.Models.producto
@{
    ViewBag.Title = "EDITAR PRODUCTO";
}
<iv class="page-title-head d-flex align-items-center">
    <div class="flex-grow-1">
        <h4 class="fs-sm text-uppercase fw-bold m-0">PRODUCTO</h4>
    </div>
    <div class="text-end">
        <ol class="breadcrumb m-0 py-0">
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">VERCOM</a>
            </li>
            <li class="breadcrumb-item">
                <a href="javascript: void(0);">PRODUCTO</a>
            </li>
            <li class="breadcrumb-item active">EDITAR</li>
        </ol>
    </div>
</iv>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">EDITAR PRODUCTO</h4>
            </div>
            <div class="card-body">
                <div class="row g-4 align-items-center">
                    <div class="col-sm-6 border-end border-dashed">
                        <div class="p-4">
                            <form role="form" method="post" action="@Url.Action("Edit", "Producto")">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <div class="mb-3">
                                    <label for="cod" class="form-label">CÓDIGO <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="cod" name="cod" value="@Model.cod" required="">
                                        @Html.ValidationMessageFor(model => model.cod)
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="nombre" class="form-label">NOMBRE <span class="text-danger">*</span></label>
                                    <div class="editor-field">
                                        <input type="text" class="form-control" id="nombre" name="nombre" value="@Model.nombre" required="">
                                        @Html.ValidationMessageFor(model => model.nombre)
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="precio" class="form-label">PRECIO <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="precio" name="precio" value="@Model.precio" required="">
                                        @Html.ValidationMessageFor(model => model.precio)
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="costo" class="form-label">COSTO <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="costo" name="costo" value="@Model.costo" required="">
                                        @Html.ValidationMessageFor(model => model.costo)
                                    </div>
                                </div>
                                <div class="form-group" id="data_1">
                                    <label for="fecha" class="form-label">FECHA <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" name="fecha" id="fecha" class="form-control" value="@Model.fecha.Value.ToString("d")">
                                    </div>
                                    @Html.ValidationMessageFor(model => model.fecha)
                                </div>
                                <div class="mb-3">
                                    <label for="categoriaid" class="form-label">CATEGORIA <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <select class="form-control" name="categoriaid" id="categoriaid">
                                            <option value="@Model.categoria.id">@Model.categoria.clave</option>
                                            @Html.Action("_listcategorias", "Parcial")
                                            @Html.ValidationMessageFor(model => model.categoriaid)
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="unidadid" class="form-label">UNIDAD <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <select class="form-control" name="unidadid" id="unidadid">
                                            <option value="@Model.unidad.id">@Model.unidad.unidad1</option>
                                            @Html.Action("_listunidades", "Parcial")
                                            @Html.ValidationMessageFor(model => model.unidadid)
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="areaid" class="form-label">ÁREA ECONÓMICA <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <select class="form-control" name="areaid" id="areaid">
                                            <option value="@Model.area.id">@Model.area.nombre</option>
                                            @Html.Action("_listareas", "Parcial")
                                            @Html.ValidationMessageFor(model => model.areaid)
                                        </select>
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap justify-content-between">
                                    <a href="@Url.Action("Index")" class="btn btn-default float-left m-t-n-xs"><i class="fa fa-arrow-left"></i> REGRESAR</a>
                                    <button class="btn btn-primary" type="submit"><strong>ACTUALIZAR</strong></button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-sm-6 text-center">
                        <div class="avatar avatar-xl mx-auto">
                            <span class="avatar-title bg-purple-subtle text-purple rounded-circle fw-bold">
                            </span>
                        </div>
                        <h4 class="mt-3">Don't Have an Account Yet?</h4>
                        <p class="text-muted mb-3">Join us today and unlock access to personalized features, updates, and more!</p>
                        <a href="auth-sign-up.html" class="link-primary text-decoration-underline fw-semibold link-offset-3">Create Your Account</a>
                    </div>
                </div> <!-- end row-->
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div> <!-- end col -->
</div>
@section Scripts {
}
