@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VERCOM | ACCESO DENEGADO</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
</head>
<body class="gray-bg">
    <div class="middle-box text-center animated fadeInDown">
        <h1>403</h1>
        <h3 class="font-bold">ACCESO DENEGADO</h3>
        <div class="error-desc">
            Lo sentimos, pero no tienes permiso para acceder a esta página. Si crees que esto es un error, por favor, contacta al administrador del sistema.
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            using (Html.BeginForm("Logout", "Account"))
            {
                @Html.AntiForgeryToken()
                <button class="btn btn-block btn-outline btn-outline-primary" style="margin-top: 7px; margin-bottom: 7px;" type="submit"><i class="fa fa-sign-out"></i>Cerrar Sesión</button>
            }
        }
    </div>
</body>
</html>
