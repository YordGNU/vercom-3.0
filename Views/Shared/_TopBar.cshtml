                                            <li>
                                                <a href="javascript:void(0);" class="dropdown-item">Project Milestones</a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0);" class="dropdown-item">Workflow Automation</a>
                                            </li>
                                            <li>
                                                <a href="javascript:void(0);" class="dropdown-item">Timesheets & Reports</a>
                                            </li>
                                        </ul>
