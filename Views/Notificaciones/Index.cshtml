@model IEnumerable<vercom.Models.Notifications>
@{
    ViewBag.Title = "NOTIFICACIONES";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>NOTIFICACIONES</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li class="breadcrumb-item">
                <strong>PANEL DE NOTIFICACIONES</strong>
            </li>          
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>PANEL DE NOTIFICACIONES <small class="m-l-sm"> @DateTime.Today.Day/@DateTime.Now.Month/@DateTime.Now.Year</small></h5>                    
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="fullscreen-link">
                            <i class="fa fa-expand"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">       
                    <div class="float-left">
                        <div class="btn-group">
                            <button type="button" data-content="/Notificaciones/CleanOldNotifications" class="btn btn-xs btn-warning deleteButton">Eliminar obsoletas</button>
                            <button type="button" data-content="/Notificaciones/CleanAllNotifications" class="btn btn-xs btn-danger deleteButton">Eliminar todas</button>                            
                        </div>
                    </div>
                    <br />
                    <hr class="hr-line-dashed" />
                    <div style="width: 100%; padding-left: -0px; ">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover dt-responsive display nowrap DataTable" width="100%">
                                <thead>
                                    <tr>
                                        <th>OPCIONES</th>
                                        <th>FECHA DE REG.</th>
                                        <th>MENSAJE</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.Id">
                                            <td class="text-center">
                                                <div class="btn-group">
                                                    <button onclick="marcarComoLeida(@item.Id)" class="btn btn-xs btn-primary" type="button">
                                                        <i class="fa fa-check"></i>&nbsp;Marcar como leída
                                                    </button>
                                                </div>
                                            </td>
                                            <td>
                                                @item.CreatedAt.Value.ToString("d")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Message)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
